<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c4" >

        <TextView
            android:text="计数："
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView"
            android:gravity="center_vertical"/>

        <TextView
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ActivityAudioParseText1"
            android:layout_weight="1"
            android:textSize="14sp"
            android:gravity="center_vertical"/>

        <TextView
            android:text="阈值："
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView3"
            android:gravity="center_vertical"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/ActivityAudioParseEdit1"
            android:layout_weight="1"
            android:textSize="14sp"
            android:text="10000"
            android:maxLength="5" />
        <TextView
            android:text="去抖延时(ms)："
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView1"
            android:gravity="center_vertical"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/ActivityAudioParseEdit2"
            android:layout_weight="1"
            android:textSize="14sp"
            android:text="1000"
            android:maxLength="4" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/RL_AudioParse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/c4"
        android:padding="8dp"
        tools:context="com.example.administrator.xsltest.AudioParseActivity"></RelativeLayout>
</LinearLayout>

